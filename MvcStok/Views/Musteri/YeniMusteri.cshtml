@model $safeprojectname$.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:green" })
    </div>
    <div>
        <label>Müşteri Soyadı</label>
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:green" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btnMusEkle">Müşteri Ekle</button>
    </div>
    
</form>
<script>
    $('#btnMusEkle').click(function () {
        alert('Müşteri Ekleme İşlemi Başarılı.');
    });
</script>

